@using UIT.iDeal.Common.Web
@model UIT.iDeal.ViewModel.Tasks.TaskItemViewModel 

@{
    ViewBag.Title = "Delete";
}
@section PageIdentifier
{
   @Html.SetUpPageIdWith(LocalSiteMap.Navigation.PageIds.Tasks.Delete);
}
<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Task</legend>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-label">IsDone</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsDone)
    </div>

    <div class="display-label">ToBeCompletedByDate</div>
